<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>


    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/dotaPlayerPrimaryBackground</item>
        <item name="colorPrimaryDark">@color/dotaPlayerSecondaryBackground</item>
        <item name="colorAccent">@color/dotaPlayerColorBackgroundAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dotaPlayerBackgroundColor</item>
    </style>

    <style name="Theme.Flickr" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/dotaPlayerPrimaryTextColor</item>
        <item name="colorControlHighlight">@color/dotaPlayerBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/dotaPlayerPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/dotaPlayerSecondaryTextColor</item>
        <item name="android:background">@color/dotaPlayerPrimaryBackground</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dotaPlayerPrimaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
